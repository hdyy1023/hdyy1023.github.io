    <script>
        var x,input,fs=10;
        input = prompt("10보다 큰 정수를 입력하세요","0");
        x = parseInt(input);

        for(var i=10;i<=x;i++){
            document.write("<p style = 'font-size:"+fs+"px'>안녕하세요</p>");
            fs++;
        }

        
       
   
     

</script>



